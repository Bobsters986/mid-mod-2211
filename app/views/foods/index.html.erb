<h1>Foods from "<%= params[:q] %>" Search</h1>

<% if @food_facade.food_search.empty? %>
  <h3>No foods found</h3>
<% else %>
  <h3><%= @food_facade.total_hits %> Results found, Displaying <%= @food_facade.food_search.size %></h3>
  <ul>
    <% @food_facade.food_search.each do |food| %>
      <strong>Description: <%= food.description %></strong><br>
      <li>Brand Owner: <%= food.brand_owner %></li>
      <li>GTIN/UPC code: <%= food.gtin_upc %></li>
      <li>Ingredients: <%= food.ingredients %></li>
      <br><br>
    <% end %>
  </ul>
<% end %>